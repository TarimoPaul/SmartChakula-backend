enum UserRole {
    ADMIN
    USER
    MANAGER
    
}


type User {
    uid: ID!
    fullName: String!
    email: String!
    phone: String
    role: UserRole! 
    isActive: Boolean!
    createdAt: String!
}

extend type Query {
    getAllUsers: [UserDto!]!
}

extend type Mutation {
    updateUserRole(uid: ID!, role: UserRole!): UserDto!
    changeUserPassword(uid: ID!, newPassword: String!): UserDto!
}
