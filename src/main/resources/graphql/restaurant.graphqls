type Restaurant {
  uid: ID!
  name: String!
  description: String
  phoneNumber: String
  region: String
  city: String
  isOpen: String
  openingTime: String
  closingTime: String
  ownerUid: ID!
  owner: User
  image: String
  type: String
  rank: String
  adress: String
  websiteUrl: String
  days: String
}

input RestaurantInput {
  name: String!
  description: String
  phoneNumber: String
  region: String
  city: String
  isOpen: String
  openingTime: String
  closingTime: String
  ownerUid: ID!
  image: String
  type: String
  rank: String
  adress: String
  websiteUrl: String
  days: String
}



type RestaurantResponse {
  status: ResponseStatus!
  message: String
  data: Restaurant
}

type RestaurantListResponse {
  status: ResponseStatus!
  message: String
  data: [Restaurant!]!
}

extend type Query {
  "Fetch all active restaurants"
  getRestaurants: RestaurantListResponse!
  
  "Fetch a single restaurant by its UID"
  getRestaurantByUid(uid: ID!): RestaurantResponse!
}

extend type Mutation {
  "Create a new restaurant"
  saveRestaurant(input: RestaurantInput!): RestaurantResponse!
  
  "Soft delete a restaurant by UID"
  deleteRestaurant(uid: ID!): Response!

    "Update a Restaurant"
    updateRestaurant(input: RestaurantInput!): Restaurant!

}



